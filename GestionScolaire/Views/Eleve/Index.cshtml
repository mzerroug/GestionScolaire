@{
    ViewData["Title"] = "Index";
}
<h1>Liste de Eleve<h1>
        <!--  Button ADD !-->
        <br />
        <div>
            <a asp-controller="Eleve" asp-action="Create" class="btn btn-primary">Ajouer nouvelle Eleve</a>
        </div>
        <br />
        <br />
        <table class="table table-bordered table-striped" style=" width:50%">
            <thead>
                <tr class="table-active">
                    <th scope="row">CNE </th>
                    <th scope="row">Nom </th>
                    <th scope="row">Prenom</th>
                    <th scope="row">Date de Naissance</th>
                    <th scope="row">Sexe</th>
                    <th scope="row">Telephone</th>
                    <th scope="row">Email</th>
                    <th scope="row">Adresse</th>
                    <th scope="row">Choix DE Filiere</th>
                    <th scope="row">Niveau d'etude'</th>
                    <th scope="row"> Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">
                            @obj.CNE
                        </td>
                        <td width="20%">
                            @obj.Nom
                        </td>
                        <td width="20%">
                            @obj.Prenom
                        </td>
                        <td width="20%">
                            @obj.DateNaissance
                        </td>
                        <td width="20%">
                            @obj.Telephone
                        </td>
                        <td width="30%">
                            @obj.Email
                        </td>
                        <td width="30%">
                            @obj.Adresse
                        </td>
                        <td width="20%">
                            @obj.ChoixFiliere
                        </td>
                        <td width="20%">
                            @obj.NiveauEtude
                        </td>
                        <td>
                            <div>
                                <a asp-controller="Matiere" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-quare"></i>Edit
                                </a>
                                <a asp-controller="Matiere" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2" onclick="return confirmer();">
                                    <i class="bi bi-pencil-quare"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <script>
            function confirmer() {
                return confirm("ARE YOU SURE YOU WANT DELETE THIS CATEGORY ");

            }
        </script>
