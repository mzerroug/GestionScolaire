@{
    ViewData["Title"] = "Index";
}
<h1>
    Liste de Matiere<h1>
        <!--  Button ADD !-->
        <br />
        <div>
            <a asp-controller="Matiere" asp-action="Create" class="btn btn-primary">Ajouer nouvelle matiere</a>
        </div>
        <br />
        <br />
        <table class="table table-bordered table-striped"
               style=" width:100%">
            <thead>
                <tr class="table-info">
                    <th>Matricule </th>
                    <th>Nom de Matiere</th>
                    <th>Masse horaire </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            @obj.Id
                        </td>

                        <td width="30%">
                            @obj.NomMatiere
                        </td>
                        <td width="30%">
                            @obj.NbrMatiere
                        </td>
                        <td>
                            <div>
                                <a asp-controller="Matiere" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-quare"></i>Edit
                                </a>
                                <a asp-controller="Matiere" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2" onclick="return confirmer();">
                                    <i class="bi bi-pencil-quare"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <script>
            function confirmer() {
                return confirm("ARE YOU SURE YOU WANT DELETE THIS CATEGORY ");

            }
        </script>
